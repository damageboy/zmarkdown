{
  "name": "zmarkdown-meta",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest packages/remark-kbd packages/remark-iframes packages/remark-ping packages/micromark-extension-kbd packages/micromark-extension-iframes packages/micromark-extension-ping",
    "lint": "eslint .",
    "build": "lerna run build",
    "build-demo": "lerna run release --scope zmarkdown && del-cli ./packages/zmarkdown/public/js && cp -r ./packages/zmarkdown/client/dist ./packages/zmarkdown/public/js"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-modules-commonjs": "^7.20.11",
    "@babel/preset-env": "^7.20.2",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.34.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "lerna": "^6.5.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/src/*.js",
      "packages/**/lib/*.js",
      "packages/zmarkdown/plugins/*.js",
      "packages/zmarkdown/postprocessors/*.js",
      "packages/zmarkdown/renderers/*.js",
      "packages/zmarkdown/server/utils/*.js",
      "packages/zmarkdown/utils/*.js",
      "packages/zmarkdown/*.js",
      "!**/*.config.js"
    ],
    "transform": {},
    "snapshotFormat": {
      "escapeString": true
    }
  },
  "standard": {
    "ignore": [
      "packages/**/__tests__/",
      "packages/**/dist/",
      "coverage/",
      "node_modules/",
      "packages/zmarkdown/client/dist/*",
      "packages/zmarkdown/webpack.config.js",
      "packages/**/node_modules/"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
